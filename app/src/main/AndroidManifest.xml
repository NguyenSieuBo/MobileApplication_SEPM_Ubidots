<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubidots.bo.ubidotsapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherplant_smartplant"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcherplant_smartplant_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TemperatureChartActivity" />
        <activity android:name=".HumidityChartActivity" />
        <activity android:name=".SoilMoistureChartActivity" />
        <activity android:name=".ControlValveActivity" />
    </application>

</manifest>